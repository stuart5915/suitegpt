{
  "manifest_version": 3,
  "name": "Inclawbator â€” AI Replies for X",
  "version": "1.0.0",
  "description": "Generate smart replies on X/Twitter powered by Claude. Part of the Inclawbate ecosystem.",
  "permissions": ["storage", "activeTab", "alarms"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*", "https://inclawbate.com/*", "https://www.inclawbate.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Inclawbator Settings"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://inclawbate.com/*", "https://www.inclawbate.com/*"],
      "js": ["auth-relay.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://inclawbate.com/*", "https://www.inclawbate.com/*"],
      "js": ["auth-read.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "generate-reply": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Generate a reply for the focused tweet"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
