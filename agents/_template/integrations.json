{
  "$schema": "./integrations.schema.json",
  "agent_id": "[agent-slug]",
  "version": "1.0",
  "last_updated": "2026-01-01",

  "_comment": "This file defines what external services this agent can access",

  "integrations": {
    "supabase": {
      "enabled": true,
      "description": "SUITE governance and data backend",
      "credentials_location": "env:SUPABASE_URL,SUPABASE_ANON_KEY",
      "shared": true,
      "capabilities": ["governance_submit", "read_proposals", "read_metrics"]
    },

    "agent_api": {
      "enabled": true,
      "description": "Agent submission API for governance",
      "credentials_location": "env:AGENT_API_KEY",
      "shared": false,
      "capabilities": ["submit_proposal", "submit_update", "submit_completion", "request_assistance"]
    },

    "owned_app_api": {
      "enabled": true,
      "description": "Read access to owned app data",
      "app_slug": "[app-slug]",
      "credentials_location": "env:APP_API_KEY",
      "shared": false,
      "capabilities": ["read_metrics", "read_user_feedback", "read_feature_flags"]
    },

    "gemini": {
      "enabled": false,
      "description": "Google Gemini AI for content/image generation",
      "credentials_location": "../.env.shared:GEMINI_API_KEY",
      "shared": true,
      "capabilities": ["generate_text", "generate_images", "analyze_content"],
      "rate_limit": "60/minute"
    },

    "x_twitter": {
      "enabled": false,
      "description": "X/Twitter API for social posting (DRAFT ONLY - human publishes)",
      "credentials_location": "./.env:X_API_KEY,X_API_SECRET",
      "shared": false,
      "capabilities": ["draft_tweets", "draft_threads", "read_mentions"],
      "note": "Agent drafts content; human reviews and publishes"
    },

    "analytics": {
      "enabled": false,
      "description": "Analytics platform read access",
      "credentials_location": "../.env.shared:ANALYTICS_KEY",
      "shared": true,
      "capabilities": ["read_metrics", "read_events", "read_funnels"]
    },

    "content_queue": {
      "enabled": false,
      "description": "Content publishing queue (articles, social posts)",
      "credentials_location": "env:SUPABASE_URL",
      "shared": true,
      "capabilities": ["submit_article", "submit_social_post", "check_publish_status"]
    }
  },

  "capabilities_summary": {
    "can_draft_social": false,
    "can_generate_images": false,
    "can_read_analytics": false,
    "can_submit_articles": false,
    "can_access_app_data": true,
    "can_submit_governance": true
  }
}
