{
  "manifest_version": 3,
  "name": "SUITE Visual Feedback",
  "version": "1.0.0",
  "description": "Visual feedback tool for efficient agentic coding. Press Alt+X to select any element and describe changes.",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SUITE Visual Feedback - Alt+X to select"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-selection": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Toggle element selection mode"
    }
  }
}
