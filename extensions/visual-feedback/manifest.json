{
    "manifest_version": 3,
    "name": "SUITE Visual Feedback",
    "version": "1.0.0",
    "description": "Click any element, describe what you want, send to AI. Screenshots + CSS selectors included.",
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "SUITE Visual Feedback"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle-feedback": {
            "suggested_key": {
                "default": "Alt+X",
                "mac": "Alt+X"
            },
            "description": "Toggle Visual Feedback overlay"
        }
    }
}